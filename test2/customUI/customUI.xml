<?xml version="1.0" encoding="utf-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <!-- tab start : MyTools -->
      <!--<tab id="my_tools_tab" insertBeforeMso="TabHome" label="MyTools"> -->
      <tab id="my_tools_tab" label="MyTools">
        <!-- group start : 標準メニュー -->
        <group id="standerd_group" label="標準メニュー" imageMso="MailMergeClearMergeType" visible="true">
          <!-- box start : メニューバー -->
          <box id="menu_box">
            <!-- menu start : ファイルメニュー -->
            <menu id="file_menu" label="&#xA0;ファイル(&amp;F)&#xA0;" showImage="false">
              <button idMso="FileOpen" />
              <menuSeparator id="menu_separator1" />
              <button idMso="FileSaveAsWebPage" />
              <menuSeparator id="menu_separator2" />
              <menu idMso="FilePermissionRestrictMenu" />
              <button idMso="FileVersionHistoryWord" visible="true" />
              <menuSeparator id="menu_separator3" />
              <button idMso="WebPagePreview" />
            </menu>
            <!-- menu end : ファイルメニュー -->

            <!-- menu start : ヘルプメニュー -->
            <menu id="help_menue" label="&#xA0;ヘルプ(&amp;H)&#xA0;" showImage="false">
              <button idMso="ActivateProduct" />
              <menuSeparator id="menu_separator41" />
              <button idMso="About" />
            </menu>
            <!-- menu end : ヘルプメニュー -->
          </box>
          <!-- box end : メニューバー -->

          <!-- box start : 基本メニュー -->
          <box id="standard_box">
            <control idMso="Undo" showLabel="false" />
            <control idMso="Redo" showLabel="false" />
            <control idMso="GalleryAllShapesAndCanvas" showLabel="false" />
            <button idMso="DocumentMapReadingView" showLabel="false" />
            <toggleButton idMso="EastAsianEditingMarks" showLabel="false" />
            <toggleButton idMso="ViewFullScreenReadingView" showLabel="false" />
            <toggleButton idMso="Superscript" showLabel="false" />
            <toggleButton idMso="Subscript" showLabel="false" />
            <toggleButton idMso="ObjectsSelect" showLabel="false" />
          </box>
          <!-- box end : 基本メニュー -->

          <!-- box start : フォント -->
          <box id="font_box">
            <!-- フォント種類 -->
            <comboBox idMso="Font" sizeString="wwwwwwwwww" />
            <!-- フォントサイズ -->
            <comboBox idMso="FontSize" />
            <!-- 太字 -->
            <toggleButton idMso="Bold" showLabel="false" />
            <!-- 斜体 -->
            <toggleButton idMso="Italic" showLabel="false" />
            <!-- 下線 -->
            <control idMso="UnderlineGallery" showLabel="false" />
            <toggleButton idMso="AlignJustify" showLabel="false" />
            <!-- 左揃え -->
            <toggleButton idMso="AlignLeft" showLabel="false" />
            <!-- 中央揃え -->
            <toggleButton idMso="AlignCenter" showLabel="false" />
            <!-- 右揃え -->
            <toggleButton idMso="AlignRight" showLabel="false" />
          </box>
          <!-- box end : フォント -->
        </group>
        <!-- group end : 標準メニュー -->

        <!-- group start : 画像関係のツール -->
        <group id="shape_group" label="ShapeTools" imageMso="ShapesInsertGallery" visible="true">

          <!-- box start : シェイプの表示ボックス -->
          <box id="shapse_box1">
            <!-- オブジェクトの選択 -->
            <toggleButton idMso="ObjectsSelect" showLabel="false" />
            <!-- シェイプの挿入 -->
            <control idMso="ShapesInsertGallery" showLabel="false" />
            <!-- テキストを横書き -->
            <toggleButton idMso="TextBoxInsertHorizontal" showLabel="false" />
            <!-- テキストを縦書き -->
            <toggleButton idMso="TextBoxInsertVertical" showLabel="false" />
            <!-- 画像の挿入 -->
            <button idMso="PictureInsertFromFile" showLabel="false" />
          </box>
          <!-- box end : シェイプの表示ボックス -->

          <!-- box start : シェイプの書式変更ボックス -->
          <box id="shape_box2">
            <!-- 塗りつぶしの色 -->
            <control idMso="ShapeFillColorPicker" showLabel="false" />
            <!-- 枠線の色 -->
            <control idMso="ShapeOutlineColorPicker" showLabel="false" />
            <!-- フォントの色 -->
            <control idMso="FontColorPicker" showLabel="false" />
            <!-- 枠線の太さ -->
            <control idMso="OutlineWeightGallery" showLabel="false" />
            <!-- 枠線の種別 -->
            <control idMso="OutlineDashesGallery" showLabel="false" />
            <!-- 矢印の書式 -->
            <control idMso="ArrowStyleGallery" showLabel="false" />
            <!-- 図形の影 -->
            <control idMso="ObjectEffectShadowGallery" showLabel="false" />
            <!-- 3D回転 -->
            <control idMso="_3DRotationGallery" showLabel="false" />
            <!-- 図形の効果 -->
            <menu idMso="ShapeEffectsMenu" showLabel="false" />
            <!-- ウィンドウ表示パネル -->
            <toggleButton idMso="SelectionPane" showLabel="false" />
          </box>
          <!-- end end : シェイプの書式変更ボックス -->
        </group>
        <!-- group end : 画像関係のツール -->

        <!-- group start : test group  -->
        <group id="test_group" label="test group" visible="true">
            <button id="InsertRectangleRed" size="large" label="四角" image="InsertRectangleRed" onAction="RibbonAction.main" />
            <button id="InsertRectangleYellow" size="large" label="四角" image="InsertRectangleYellow" onAction="RibbonAction.main" />
            <button id="InsertRectangleBlue" size="large" label="四角" image="InsertRectangleBlue" onAction="RibbonAction.main" />
            <button id="InsertRectangleGreen" size="large" label="四角" image="InsertRectangleGreen" onAction="RibbonAction.main" />
            <button id="ProtectDocument" size="large" label="パスワード" image="ProtectDocument" onAction="RibbonAction.main" />
            <button id="convertAlphanumericToHalf" label="英数字半角変換" size="normal" image="convertAlphanumericToHalf" onAction="RibbonAction.main" />
        </group>
        <!-- group end : test group  -->

        <!-- group start : 縮小表示用ダミー -->
        <group id="dummy" visible="false" />
      </tab>
      <!-- tab end : MyTools -->
    </tabs>
  </ribbon>
</customUI>
